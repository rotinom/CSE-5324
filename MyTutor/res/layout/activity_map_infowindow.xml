<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:paddingTop="10dp" >
    <ImageView
        android:id="@+id/mapImage"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@color/clear"
        android:src="@drawable/ic_mytutor" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:paddingLeft="10dp" >
   <TextView
       android:id="@+id/title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="16sp"
       android:textColor="#000000"
       android:textStyle="bold"/>
   <TextView
       android:id="@+id/snippet"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="#1abf41"
       android:textStyle="bold"
       android:textSize="12sp"/>
    <RatingBar
            style="@style/tutorRatingBar"
            android:id="@+id/tutorRatingMap"
            android:gravity="right"
            android:numStars="5"
            android:stepSize="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/custom_marker_rating_bar"
            android:isIndicator="true"
            android:minHeight="25dp" />   
    <com.google.android.gms.ads.AdView
        android:id="@+id/mapAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2605134093291532/3912014007" />
    </LinearLayout>
</LinearLayout>