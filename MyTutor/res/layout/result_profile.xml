<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    tools:context=".ProfileActivity" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:layout_rowSpan="8"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_mytutor" />

    <TextView
        android:id="@+id/firstNameLabel"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="10dp"
        android:layout_row="0"
        android:text="First Name:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="10dp"
        android:layout_row="1"
        android:text="FirstName"
        android:textSize="22sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/lastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="10dp"
        android:layout_row="2"
        android:text="Last Name:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="10dp"
        android:layout_row="3"
        android:text="LastName"
        android:textSize="22sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/rateLabel"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="10dp"
        android:layout_row="4"
        android:text="Rate:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="10dp"
        android:layout_row="5"
        android:text="FirstName"
        android:textSize="22sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/ratingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:layout_marginLeft="10dp"
        android:layout_row="6"
        android:text="Rating:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rating"
        style="@style/tutorRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="7"
        android:isIndicator="true"
        android:minHeight="25dp"
        android:numStars="5"
        android:progressDrawable="@drawable/custom_rating_bar"
        android:stepSize="0.1" />
    
    <TextView
        android:id="@+id/ratingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="7"
        android:text="(0.0)"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/emailMeButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_column="0"
        android:layout_row="8"
        android:text="Email Me"
        android:onClick="emailMeClicked"
        android:layout_gravity="center_horizontal" />    
    
    <Button
        android:id="@+id/rateMeButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_column="1"
        android:layout_row="8"
        android:text="Rate Me"
        android:onClick="rateMeClicked" />
   

    <TextView
        android:id="@+id/scheduleLabel"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="9"
        android:text="Schedule:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/schedule"
        android:layout_width="fill_parent"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="10"
        android:text="Schedule"
        android:textSize="22sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/commentLabel"
        android:layout_width="fill_parent"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="11"
        android:text="Profile Comment:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="12"
        android:text="ProfileComment"
        android:textSize="22sp"
        android:textStyle="italic" />

</GridLayout>