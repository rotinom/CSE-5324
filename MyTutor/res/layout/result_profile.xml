<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfileActivity" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_row="0"
        android:layout_rowSpan="8"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_mytutor"
        android:scaleType="centerCrop"/>
   

    <TextView
        android:id="@+id/firstNameLabel"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_marginLeft="10dp"
        android:layout_row="0"
        android:text="First Name:"
        android:textStyle="bold"
        android:textSize="25sp"/>
    
   <TextView
        android:id="@+id/firstName"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_marginLeft="10dp"
        android:layout_row="1"
        android:text="FirstName"
        android:textStyle="italic"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/lastNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_marginLeft="10dp"
        android:layout_row="2"
        android:text="Last Name:"
        android:textStyle="bold"
        android:textSize="25sp"/>
    
        <TextView
        android:id="@+id/lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_marginLeft="10dp"
        android:layout_row="3"
        android:text="LastName"
        android:textSize="22sp"
        android:textStyle="italic"/>
    
   <TextView
        android:id="@+id/rateLabel"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_marginLeft="10dp"
        android:layout_row="4"
        android:text="Rate:"
        android:textStyle="bold"
        android:textSize="25sp"/>
    
   <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_marginLeft="10dp"
        android:layout_row="5"
        android:text="FirstName"
        android:textSize="22sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/ratingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_marginLeft="10dp"
        android:layout_row="6"
        android:text="Rating:"
        android:textStyle="bold"
        android:textSize="25sp"/>
    
    <RatingBar
        android:id="@+id/rating"
        style="@style/tutorRatingBar"
        android:numStars="5"
        android:stepSize="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/custom_rating_bar"
        android:isIndicator="true"
        android:minHeight="25dp" 
        android:layout_column="1"
        android:layout_row="7" />

        
    <TextView        
        android:id="@+id/scheduleLabel"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="8"
        android:text="Schedule:"
        android:textStyle="bold"
        android:textSize="25sp"/>
    
    <TextView
        android:id="@+id/schedule"
        android:layout_width="fill_parent"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="9"
        android:text="Schedule"
        android:textSize="22sp"
        android:textStyle="italic"/>
    
    <TextView
        android:id="@+id/commentLabel"
        android:layout_width="fill_parent"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="10"
        android:text="Profile Comment:"
        android:textStyle="bold"
        android:textSize="25sp"/>
    
    <TextView
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_row="11"
        android:text="ProfileComment"
        android:textSize="22sp"
        android:textStyle="italic"/>


</GridLayout>
