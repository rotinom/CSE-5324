<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mytutor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The following two permissions are not required to use
	     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mytutor_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
		<service android:name=".authentication.MyTutorAuthenticationService">
		    <intent-filter>
		        <action android:name="android.accounts.AccountAuthenticator" />
		    </intent-filter>
		    <meta-data android:name="android.accounts.AccountAuthenticator"
		               android:resource="@xml/authenticator" />
		</service>

        <!-- Splash screen -->
        <activity
            android:name="com.mytutor.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity -->
        <activity
            android:name="com.mytutor.MainActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Login activity -->
        <activity
            android:name="com.mytutor.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <!-- Register activity -->
        <activity
            android:name="com.mytutor.RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>

        <!-- Profile activity -->
        <activity
            android:name="com.mytutor.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>

        <!-- Message activity -->
        <activity
            android:name="com.mytutor.MessageActivity"
            android:label="@string/title_activity_message" >
        </activity>

        <!-- Map activity -->
        <activity
            android:name="com.mytutor.MapActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_map"
            android:theme="@style/FullscreenTheme" >
        </activity>

        <!-- Search activity -->
        <activity
            android:name="com.mytutor.search.SearchParams"
            android:label="@string/title_activity_search" >
        </activity>

        <!-- Search Results activity -->
        <activity
            android:name="com.mytutor.search.SearchResults"
            android:label="@string/title_activity_results" >
        </activity>
        
        <!-- Search Results activity -->
        <activity
            android:name="com.mytutor.authentication.AuthenticatorActivity"
            android:label="@string/title_activity_authenticator" >
        </activity>

        <uses-library android:name="android.test.runner" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyApyxx3guWBNutcY2viAoVwqzHelacNmqk" />

        <activity
            android:name="com.mytutor.authentication.AuthenticateActivity"
            android:label="@string/title_activity_authenticate"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="your tests label"
        android:targetPackage="com.mytutor" />

</manifest>
